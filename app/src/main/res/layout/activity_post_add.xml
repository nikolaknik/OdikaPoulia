<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/a"
android:backgroundTint="#80FFFFFF"
android:backgroundTintMode="src_over"
    tools:context="gr.odikapoulia.odikapoulia.PostAddActivity">

    <TextView
        android:id="@+id/kefalida_post"
        android:layout_width="197dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="24dp"
        android:text="Πρόσθεση Σχολίου"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/post_add_comment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/post_add_comment"
        android:layout_width="249dp"
        android:layout_height="132dp"
        android:layout_marginBottom="48dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:focusable="true"
        android:hint="Σχόλιο"
        android:inputType="textPersonName"
        android:textColorHighlight="#ff7eff15"
        android:textColorHint="#ffff25e6"
        android:gravity="top|left"
        app:layout_constraintBottom_toTopOf="@+id/button_insertNewPost"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:background="@android:drawable/editbox_background_normal" />


    <Button
        android:id="@+id/button_insertNewPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="Εισαγωγή"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>

