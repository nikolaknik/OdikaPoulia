<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/a"
android:backgroundTint="#80FFFFFF"
android:backgroundTintMode="src_over"
tools:context="gr.odikapoulia.odikapoulia.TopicAddActivity">

    <TextView
        android:id="@+id/kefalida_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Πρόσθεση Topic"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/topic_add_title"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/topic_add_title"
        android:layout_width="228dp"
        android:layout_height="88dp"
        android:layout_marginBottom="389dp"
        android:layout_marginTop="156dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:focusable="true"
        android:hint="Τίτλος"
        android:gravity="top|left"
        android:inputType="text|textMultiLine|textCapSentences"
        app:layout_constraintBottom_toTopOf="@+id/button_insertNewTopic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kefalida_topic"
        tools:background="@android:drawable/editbox_background_normal" />

    <Button
        android:id="@+id/button_insertNewTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Εισαγωγή"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
