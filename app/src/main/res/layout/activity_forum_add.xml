<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context="gr.odikapoulia.odikapoulia.ForumAddActivity">

        <TextView
            android:id="@+id/kefalida_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:text="Πρόσθεση Θεματικής Ενότητας (Ορατό Μόνο στον διαχειριστή)"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/topic_add_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/topic_add_title"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:ems="10"
            android:focusable = "true"
            android:textColorHighlight = "#ff7eff15"
            android:textColorHint = "#ffff25e6"
            android:inputType="textPersonName"
            android:hint = "Όνομα Θέματος"
            app:layout_constraintBottom_toTopOf="@+id/topic_add_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kefalida_topic"
            tools:background="@android:drawable/editbox_background_normal" />

        <EditText
            android:id="@+id/topic_add_description"
            android:layout_width="272dp"
            android:layout_height="268dp"
            android:background="@color/colorPrimary"
            android:ems="10"
            android:gravity="top|left"
            android:inputType="textPersonName"
            android:focusable = "true"
            android:textColorHighlight = "#ff7eff15"
            android:textColorHint = "#ffff25e6"
            android:hint = "Περιγραφή Θέματος"
            app:layout_constraintBottom_toTopOf="@+id/button_insertNewTopic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topic_add_title"
            tools:background="@android:drawable/editbox_background_normal" />

        <Button
            android:id="@+id/button_insertNewTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Εισαγωγή"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topic_add_description" />

</android.support.constraint.ConstraintLayout>
